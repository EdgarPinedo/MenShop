@using Online_Shop.Dtos;
@model AddressDTO
@{
    ViewData["Title"] = "Actualizar dirección";
}

<h1 class="account-title">Actualizar dirección</h1>
<div class="ls-flex">
    <form asp-action="UpdateAddress" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <label>Nombre completo:</label>
        <input asp-for="FullName" required />
        <label>Calle y número:</label>
        <input asp-for="Street" required />
        <label>Ciudad:</label>
        <input asp-for="City" required />
        <label>Estado:</label>
        <input asp-for="States" required />
        <label>País:</label>
        <input asp-for="Country" required />
        <label>Código postal:</label>
        <input asp-for="PostalCode" type="number" required />
        <span asp-validation-for="PostalCode"></span>

        <button type="submit">Guardar</button>
    </form>
</div>
